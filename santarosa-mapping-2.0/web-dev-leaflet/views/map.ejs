        window.onload = function() {
            var style_string = "width:" + window.screen.availWidth + "px";
            var width = window.screen.availWidth;
            var height = window.screen.availHeight;
            document.getElementById("map").setAttribute("style", style_string);
            if (width < 1000) {
                document.getElementById("sideNav").style.width = (width/1.5) + "px";
                <!-- document.getElementById("sideNav").style.height = (height) + "px"; -->
            } else {
                document.getElementById("sideNav").style.width = (width/4) + "px";
                <!-- document.getElementById("sideNav").style.height = (height) + "px"; -->
            }

            style_string = "height:" + (window.screen.availHeight-100) + "px";
            document.getElementById("map").setAttribute("style", style_string);
        }
